{
  "name": "cube-game",
  "version": "1.0.0",
  "description": "Cube Game",
  "scripts": {
    "build:css": "sass src/style.sass dist/style.css",
    "watch:css": "sass --watch src/style.sass:dist/style.css",
    "build": "npm run build:css",
    "vercel-build": "npm run build",
    "start": "npm run build && http-server dist -c-1 -p 8080"
  },
  "devDependencies": {
    "sass": "^1.64.0",
    "http-server": "^14.1.1"
  }
} 