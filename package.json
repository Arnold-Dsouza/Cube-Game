{  "name": "the-cube",
  "version": "1.0.0",
  "description": "Interactive Rubik's Cube simulator",
  "main": "server.js",
  "engines": {
    "node": ">=14.x"
  },  "scripts": {
    "start": "node server.js",
    "sass": "sass --watch the-cube/src/style.sass:the-cube/dist/style.css",
    "build": "sass the-cube/src/style.sass:the-cube/dist/style.css && node scripts/copy-files.js",
    "vercel-build": "npm run build",
    "dev": "concurrently \"npm run start\" \"npm run sass\"",
    "deploy": "node deploy.js"
  },
  "keywords": [
    "cube",
    "rubik",
    "game",
    "3d"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "sass": "^1.70.0"
  }
}
